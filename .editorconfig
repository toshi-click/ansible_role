# ルートの設定（.editorconfigはプロジェクトのルートに置くと良いです）
root = true
# 改行コードと改行後ろの空白削除の有無を指定したい。文字コードも。
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style=space
indent_size=4
tab_size=4
continuation_indent=4
es6_import_export_braces=true
object_literal_braces=true

# jsの設定
[*.js]
indent_style = space
indent_size = 2

# package.json
[package.json]
indent_style = space
indent_size = 2

# td-agent.conf
[td-agent.conf]
indent_style = space
indent_size = 2

[*.{kt,kts}]
indent_size=4
continuation_indent_size=4

[*.js.map]
indent_style=space
indent_size=2
tab_size=2
continuation_indent=2

[{*.yaml,*.yml}]
indent_style=space
indent_size=2
tab_size=2
continuation_indent=2

[yarn.lock]
indent_style=space
indent_size=2
tab_size=2
continuation_indent=2

[.eslintrc]
indent_style=space
indent_size=2
tab_size=2
continuation_indent=2

[{composer.lock,.babelrc,jest.config,.stylelintrc,*.bowerrc,*.jsb3,*.jsb2,*.json}]
indent_style=space
indent_size=2
tab_size=2
continuation_indent=2
